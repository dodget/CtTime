
<% if user_signed_in? && current_user.admin? %>
<div class="row text-center">
  <div class="col-sm-4 col-sm-offset-4">
    <ul class="list-group">
      <% @users.each do |user| %>
        <li class="list-group-item">
          <%= link_to user.full_name, user %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<% else %>
  <h1>Sorry! You are not logged in as an admin</h1>
<% end %>
